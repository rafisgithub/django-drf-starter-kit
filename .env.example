# Django Core Settings
# DEBUG=True  -> Uses SQLite (Development)
# DEBUG=False -> Uses PostgreSQL (Production)
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# PostgreSQL Settings (Only used when DEBUG=False)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=django_db
DATABASE_USER=django_user
DATABASE_PASSWORD=django_password
DATABASE_HOST=db
DATABASE_PORT=5432

# Social Auth Settings
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=your-google-oauth2-client-id
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=your-google-oauth2-client-secret